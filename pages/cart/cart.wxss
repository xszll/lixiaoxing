/* pages/cart/cart.wxss */

.addr {
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #999;
  border-bottom: 1rpx solid #eee;
}

.addr .weizhi {
  width: 30%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.addr .weizhi .position {
  display: inline-block;
  vertical-align: middle;
  width: 26rpx;
  height: 30rpx;
  margin: 0 5rpx 0 0;
  background: url(data:image/png;base64,);
  background-size: 100% 100%;
  background-position: center center;
}

.addr > .edit {
  color: #e4393c;
}

#listContent {
  width: 100%;
  height: auto;
}

#listContent .section {
  width: 100%;
  height: 100%;
  margin-bottom: 30rpx;
  background: #fff;
  position: relative;
}

.section .headWrap {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.select {
  width: 40rpx;
  height: 40rpx;
  background-image: url(data:image/png;base64,); 
  background-size: 100% 100%;
  background-position: center;
}

.select.hot {
  background-image: url(data:image/png;base64,);
}

.headWrap .shopIcon {
  color: #ddd;
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
  background: url(//img11.360buyimg.com/jdphoto/s120x120_jfs/t15310/38/1621444639/6673/3159485e/5a5316c9N59ab9cf8.png) no-repeat;
  background-size: 120rpx auto;
  background-position: -10rpx -70rpx;
}

.headWrap .shopName {
  height: 100%;
  display: flex;
  align-items: center;
}

.headWrap navigator {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
}

.headWrap .arrowRight {
  width: 12rpx;
  height: 20rpx;
  margin-left: 10rpx;
  background: url("data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 12 20%22%3E%3Cpath fill=%22#CCCCCC%22 fill-rule=%22evenodd%22 d=%22M2 20c-.8 0-1.5-.5-1.8-1.2-.3-.8-.2-1.6.4-2.2L7.2 10 .6 3.4c-.8-.8-.8-2 0-2.8.8-.8 2-.8 2.8 0l8 8c.4.4.6 1 .6 1.4 0 .5-.2 1-.6 1.4l-8 8c-.4.4-1 .6-1.4.6z%22/%3E%3C/svg%3E");
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center;
}

.item {
  width: 100%;
  height: auto;
  display: flex;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.item > image {
  width: 150rpx;
  height: 150rpx;
}

.item .goodsContent {
  flex: 1;
}

.goodsContent .goodsName {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #333;
}

.goodsContent .goodsDescription {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #999;
  line-height: 2;
}

.goodsContent .goodsLine{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goodsContent .goodsPrice{
  flex: 1;
  color: #e4393c;
  font-size: 20rpx;
}
.goodsConten .goodsPrice text{
  font-size: 24rpx;
}
.goodsLine .numWrap{
  width: 220rpx;
  height: 60rpx;
  display: flex;
  background: #f7f7f7;
}
.numWrap view{
  width: 60rpx;
  height: 100%;
}
.numWrap .minus{
  position: relative;
}
.numWrap .plus{
  position: relative;
}
.numWrap .heng{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  width: 75%;
  height: 4rpx;
  background: #999;

}
.numWrap .shu{
   position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  width: 75%;
  height: 4rpx;
  background: #999;
  transform: rotateZ(90deg);
}
.numWrap input{
  width: 98rpx;
  height: 100%;
  border-left: 1rpx solid #fff;
  border-right: 1rpx solid #fff;
  text-align: center;
}
.removeGoods{
  text-align: right;
  color: #999;
  font-size: 20rpx;
  line-height: 2.5;
  margin: 10rpx 0 ;
}
.line{
  width: 100%;
  height: 20rpx;
  background: #e5e5e5;
}

.fixBar{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
}
.total{
  position: absolute;
  right: 0;
  top: 0;
  display: flex;

}
.total .totalInfo{
  padding-top: 20rpx;
  box-sizing: border-box;
}
.total text{
  color: #e4393c;
}
.total .buy{
  width: 220rpx;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  background: #e4393c;
  color: #fff;
  font-size: 20rpx;
  margin-left: 20rpx;
}
.total .totalBackMoney{
  color: #999;
  font-size: 20rpx;
}
